.list{
  display: flex;
  margin-bottom: 30px;
}
.list>image{
  border-radius: 5px;
  height: 180px;
  width: 140px;
  margin-left: 10px;
}
.list .message{
  width: 200px;
  margin-left:15px;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
}
.message .title>text:nth-child(1){
  color: #2093BD;
  font-size: 19px;
  margin-right: 6px;
}
.message .title>text:nth-child(2),
.message .rating>text:nth-child(2){
  color: #999999;
  font-size: 12px;
}
.message .rating>text:nth-child(1){
  color: #F8A651;
  font-weight: 350;
  font-size:15px;
  margin-right: 6px;
}
.detail,.rank{
  font-weight: 300;
  font-size:14px;
}
.dr .detail image{
  height: 25px;
  width: 25px;
}
.rank{
  display: inline-block;
  color: #fff;
  background-color: #FB7397;
  padding: 0px 5px;
  border-radius: 3px;
  margin-top: 3px;
  height: 20px;
}
.dr{
  display: flex;
  justify-content:space-between;
  align-content: center;
}
/*加载更多*/
.bottom{
  line-height: 50rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
/*过渡动画 */
.loading{
    width: 148rpx;
    height: 44rpx;}
.loading text{
    display: inline-block;
    width: 20rpx;
    height:20rpx;
    margin-right: 5px;
    border-radius: 50%;
    background:#999;
    -webkit-animation: load 1.04s ease infinite;
}
.loading text:last-child{
    margin-right: 0px; 
}
@-webkit-keyframes load{
    0%{
        opacity: 1;
        -webkit-transform: scale(1);
    }
    100%{
        opacity: 0.2;
        -webkit-transform: scale(.3);
    }
}
.loading text:nth-child(1){
    -webkit-animation-delay:0.13s;
}
.loading text:nth-child(2){
    -webkit-animation-delay:0.26s;
}
.loading text:nth-child(3){
    -webkit-animation-delay:0.39s;
}
.loading text:nth-child(4){
    -webkit-animation-delay:0.52s;
}
.loading text:nth-child(5){
    -webkit-animation-delay:0.65s;
}

.pv{
  padding: 10px;
  font-size: 18px;
  height: 150px;
}
.pv image{
  margin-top: 15px;
  width: 150px;
  height: 90px;
  border-radius: 8px;
  display: block;
}
 .pv scroll-view{
  height: 100%;
  white-space: nowrap;
}
 .pv scroll-view view{
  white-space: nowrap;
  display: inline-block;
  margin-right: 15px;
}
.pv .title{
  color: #FB94B0;
  font-size: 15px;
  margin-top: 5px;
  font-weight: 300;
}