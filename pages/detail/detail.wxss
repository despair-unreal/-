/* pages/detail/detail.wxss */
@import '/pages/template/list.wxss';
.list{
  color: #FFF;
  padding: 20px 0;
  position: relative;
}
.bg{
  background: rgba(0,0,0,0.1);
  top:0;
  left:0;
  bottom: 0;
  right:0; 
  position:absolute;
  z-index: -1;
}
.bg2{
  content:"";
  filter:blur(15px);
  top:0;
  left:0;
  bottom: 0;
  right:0; 
  position:absolute;
  z-index: -2;
}

.content{
  margin: 0 10px;
  margin-top: -20px;
}
.content>view{
  border-bottom: 1px solid #EEEEEE;
  padding-bottom: 20px;
  font-weight: 300;
  font-size: 15px;
}
.content>view>view:first-child{
  font-size: 23px;
  display: flex;
  justify-content: space-between;
  padding-top: 10px;
}
.content>view>text:nth-child(2){
  display: block;
  padding: 0 5px;
  margin-top: -5px;
}
.content .eps{
  margin: 0 auto;
  width: 88%;
  padding-top: 10px;
  display: flex;
  font-size: 13px;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 1px solid #EEEEEE;
  padding-bottom: 10px;
  height: 50px;
}
.content .eps:last-child{
  border: none;
  padding-bottom: 0px;
}
.content .role{
  display: flex;
  width: 50%;
  align-items: center;
  align-content:space-between;
  float: left;
  margin-top: 15px;
}
.content .role .image{
  overflow: hidden;
  width: 70px;
  height: 70px;
  border-radius: 10px;
}
.content .role image{
  width: 70px;
  height: 70px;
}
.content .msg{
  width: calc(100% - 85px);
  font-size: 12px;
  display: flex;
  margin-left: 8px;
  flex-direction: column;
}
.content .job{
  background-color: #FB7397;
  color: #FFF;
  padding: 2px 5px;
  border-radius: 5px;
  margin-right: 5px;
  white-space: nowrap;
  margin-bottom: 2px;
  display: inline-block;
}
.content .reviews{
  display: flex;
  border-bottom: 1px solid #EEEEEE;
  padding: 20px 0;
}
.content .reviews:last-child{
  border: none;
}
.content .reviews image{
  width: 70px;
  height: 70px;
  margin-right: 8px;
  border-radius: 10px;
}
.content .reviews_content{
  width: calc(100% - 80px);
  display: flex;
  flex-direction: column;
}
.content .reviews_content>text:nth-child(1){
  color: #FB7397;
  font-size: 16px;
}
.content .reviews_content>text:nth-child(3){
  font-size: 14px;
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 1px;
  margin: 5px 0;
 }
