/* pages/modify/modify.wxss */
page {
  
  font-size: 32rpx;
}

.info{  
  height: 160rpx;
  line-height: 160rpx;
  padding-left: 40rpx;
  border-bottom: 1px solid #efefef;
  position: relative;
}

.info text{
  flex: 1;
  
}

.info .avatar,.info .bg {
  width: 90rpx;
  height: 90rpx;
  line-height: 70rpx;
  border-radius: 50%;
  position: absolute;
  right: 80rpx;
  top: 30rpx;  
}
.info .bg {
  width: 150rpx;
  border-radius: 0;
}
.info .arrow {
  width: 30rpx;
  height: 32rpx; 
  position: absolute; 
  right: 25rpx;
  top: 55rpx;
}
.section {
  padding: 40rpx;
  border-bottom: 1px solid #efefef;
}

.section:last-child {
  border: none;
}

.section-title {
  width: 20%;
  float: left;
}

label {
  padding: 0 20rpx;
}
button{
  background-color: #3165B4;
  color: #fff;
  width: 60% !important;
  margin-top: 30px;
}