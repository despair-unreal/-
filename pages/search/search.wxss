/* pages/search/search.wxss */
@import '/pages/template/list.wxss';
.top{
  width: 95vw;
  margin: 0px auto;
  padding: 10px 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 50px;
}
.top>image{
  height: 45px;
  width: 45px;
  border-radius: 50%;
}
.top>view{
  display: flex;
  align-items: center;
  position: relative;
}
.top>view image{
  height: 25px;
  width: 25px;
  position: absolute;
  left: 10px;
}
.top>view input{
  height: 30px;
  width: 70vw;
  padding-left: 40px;
  background-color: #F3F3F3;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  border-bottom-left-radius: 15px;
  border-top-left-radius: 15px;
}